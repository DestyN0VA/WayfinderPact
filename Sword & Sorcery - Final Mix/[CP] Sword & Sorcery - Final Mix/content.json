  "ConfigSchema": {
    "Exclude From Perfection": {
      "AllowValues": "true, false",
      "Default": "false",
      "AllowBlank": false,
      "Description": "Excludes S&S items from Perfection tracking.",
      "Section": "Gameplay"
    },

    "Ancient Sweet Tea Difficulty": {
      "AllowValues": "3, 7, 14, 21,",
      "Default": "7",
      "AllowBlank": false,
      "Description": "Set how many Ancient Sweet Tea Leaves are required to craft the universally loved Ancient Sweet Tea recipe.",
      "Section": "Gameplay"
    },

    "Disable Portrait Assets": {
      "AllowValues": "true, false",
